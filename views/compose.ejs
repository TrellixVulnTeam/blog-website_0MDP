<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="titleMessage" value="">
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea class="form-control" rows="5" cols="30" type="text" name="composedMessage"></textarea>
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </div>
</form>
<%- include("partials/footer") -%>
